{% extends "base.html.twig" %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Nos produits phares</h1>
		<div class="row">
			{% for p in products %}
				<div class="col">
					<div class="card">
						<img src="{{ p.mainPicture }}" class="img-fluid" alt="Image produit">
						<div class="card-body">
							<h4 class="card-title">{{ p.name }}
								({{ p.price / 100 }}
								€ )</h4>
							<span class="badge bg-info">
								{{ p.category.name }}
							</span>
							<p class="card-text">{{ p.shortDescription }}</p>
							<a href="#" class="btn btn-primary btn-sm">Détails</a>
							<a href="#" class="btn btn-success btn-sm">Ajouter</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

		<hr>

		<h2>Un service irreprochable</h2>

		<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fuga quis quae aliquid est, neque tempora aliquam provident adipisci. Placeat voluptatem itaque in amet dolorem dicta reiciendis reprehenderit magni quae obcaecati.</p>

		<div class="row">
			{% include "shared/_assurance.html.twig" with {
			'color': 'primary',
			'icon': 'fas fa-truck',
			'text': "lorem15 "
		} %}
			{% include "shared/_assurance.html.twig" with {
			'color': 'success',
			'icon': 'fas fa-check',
			'text': "lorem15 "
		} %}
			{% include "shared/_assurance.html.twig" with {
			'color': 'warning',
			'icon': 'fas fa-lock',
			'text': "lorem15 "
		} %}
		</div>
	</div>

{% endblock %}
